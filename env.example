# Приложение
APP_NAME=Aisha Bot v2
APP_VERSION=2.0.0
DEBUG=false
ENVIRONMENT=development  # development, staging, production

# Telegram
TELEGRAM_TOKEN=your_telegram_token_here
TELEGRAM_ADMIN_IDS=123456789,987654321
TELEGRAM_WEBHOOK_URL=  # Оставить пустым для long polling
TELEGRAM_WEBHOOK_SECRET=

# База данных PostgreSQL
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=aisha_v2

# Настройки пула соединений PostgreSQL
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=1800

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# MinIO
MINIO_ENDPOINT=play.min.io
MINIO_ACCESS_KEY=your_access_key
MINIO_SECRET_KEY=your_secret_key
MINIO_SECURE=true

# Бакеты MinIO
MINIO_BUCKET_AVATARS=aisha-v2-avatars
MINIO_BUCKET_PHOTOS=aisha-v2-photos
MINIO_BUCKET_TEMP=aisha-v2-temp

# Backend API
BACKEND_API_URL=http://localhost:8000
BACKEND_API_KEY=your_api_key_here
BACKEND_TIMEOUT=30

# Очереди
QUEUE_BROKER_URL=redis://localhost:6379/1
QUEUE_RESULT_BACKEND=redis://localhost:6379/2

# Кэширование
CACHE_URL=redis://localhost:6379/3
CACHE_DEFAULT_TIMEOUT=300

# Логирование
LOG_LEVEL=INFO
LOG_FORMAT=json  # text или json
LOG_FILE=logs/aisha_bot.log  # Путь к файлу логов

# Мониторинг
PROMETHEUS_ENABLED=false
PROMETHEUS_PORT=9090

# Безопасность
SECRET_KEY=your-secret-key-here  # Для подписи токенов и других данных
ALLOWED_HOSTS=localhost,127.0.0.1  # Список разрешенных хостов
RATE_LIMIT_ENABLED=true  # Включить ограничение запросов
