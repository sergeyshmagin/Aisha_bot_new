# ============================================================================
# ПРОДАКШН КОНФИГУРАЦИЯ для Webhook API
# ============================================================================
# Этот файл содержит ТОЛЬКО конфигурационные переменные
# СЕКРЕТЫ остаются в docker-compose.yml для безопасности

# Application settings
DEBUG=false
API_HOST=0.0.0.0
API_PORT=8001
SSL_ENABLED=false

# Performance settings
UVICORN_BACKLOG=2048
UVICORN_ACCESS_LOG=true

# Webhook settings  
WEBHOOK_TIMEOUT=30
WEBHOOK_RETRY_ATTEMPTS=3
FAL_WEBHOOK_URL=https://aibots.kz:8443/api/v1/avatar/status_update

# Redis settings (без пароля)
REDIS_SSL=false
REDIS_POOL_SIZE=5
REDIS_DB=0

# MinIO settings (без секретов)
MINIO_SECURE=false

# Logging
LOG_LEVEL=info
LOG_FORMAT=json

# Health check
HEALTH_CHECK_INTERVAL=30

# Cache settings
CACHE_TTL=3600
CACHE_MAX_SIZE=1000 