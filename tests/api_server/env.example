# API Server настройки
API_HOST=0.0.0.0
API_PORT=8443
API_DEBUG=false
API_RELOAD=false

# SSL настройки (для FAL AI webhook требуется HTTPS)
SSL_ENABLED=true
SSL_CERT_PATH=ssl/aibots_kz.crt
SSL_KEY_PATH=ssl/aibots.kz.key
SSL_CA_BUNDLE_PATH=ssl/aibots_kz.ca-bundle

# Database (та же что и для основного бота)
DATABASE_URL=postgresql+asyncpg://user:password@localhost/aisha_bot

# Telegram Bot
TELEGRAM_TOKEN=your_telegram_bot_token

# FAL AI
FAL_API_KEY=your_fal_api_key
FAL_WEBHOOK_SECRET=optional_webhook_secret

# Логирование
LOG_LEVEL=INFO
LOG_DIR=logs
WEBHOOK_LOG_FILE=webhook.log

# Безопасность (IP адреса FAL AI)
ALLOWED_IPS=["185.199.108.0/22", "140.82.112.0/20"] 